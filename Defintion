/*create empty tables 
*/


/*Definition Attributes and Types*/

/*customer table*/
CREATE TABLE ###.###.customer (
  id INT,
  kunden_id VARCHAR(30) PRIMARY KEY NOT NULL,
  vorname VARCHAR(30) NOT NULL,
  nachname VARCHAR(30) NOT NULL,
  strasse VARCHAR(30),
  ort VARCHAR(30),
  plz VARCHAR(5), 
  vorwahl VARCHAR(10),
  telefon VARCHAR(20),
  bundesland VARCHAR(30),
  geburtstag DATE,
  alter INT,
  timestamp1 DATE
);

/*credit table*/
CREATE TABLE ###.###.credit (
 kunden_id STRING PRIMARY KEY NOT NULL,
 kredit_score DOUBLE NOT NULL,
 kreditauslastungsgrad DOUBLE,
 schulden_zu_einkommen_ratio DOUBLE,
 avg_monatliche_einzahlung INTEGER,
 hypotheken_status STRING,
 kunde_seit DATE, 
 kunde_seit_jahre INTEGER
)
